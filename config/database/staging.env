# Staging Database Configuration
NODE_ENV=staging

# Primary Database (PostgreSQL)
DB_HOST=${STAGING_DB_HOST}
DB_PORT=${STAGING_DB_PORT:-5432}
DB_USERNAME=${STAGING_DB_USERNAME}
DB_PASSWORD=${STAGING_DB_PASSWORD}
DB_DATABASE=${STAGING_DB_DATABASE:-website_generator_staging}

# SSL Configuration (recommended for staging)
DB_SSL_CA=${STAGING_DB_SSL_CA}
DB_SSL_CERT=${STAGING_DB_SSL_CERT}
DB_SSL_KEY=${STAGING_DB_SSL_KEY}

# Test Database Configuration (for staging CI/CD)
DB_TEST_HOST=${STAGING_DB_TEST_HOST:-localhost}
DB_TEST_PORT=${STAGING_DB_TEST_PORT:-5433}
DB_TEST_USERNAME=${STAGING_DB_TEST_USERNAME:-test_user}
DB_TEST_PASSWORD=${STAGING_DB_TEST_PASSWORD}
DB_TEST_DATABASE=${STAGING_DB_TEST_DATABASE:-website_generator_test_staging}

# Migration Configuration
TYPEORM_MIGRATIONS_RUN=false
TYPEORM_LOGGING=false

# Staging-specific optimizations
DB_POOL_SIZE=15
DB_CONNECTION_TIMEOUT=10000
DB_IDLE_TIMEOUT=60000

# Monitoring and backup
DB_BACKUP_ENABLED=true
DB_BACKUP_SCHEDULE="0 2 * * *"  # Daily at 2 AM
DB_MONITORING_ENABLED=true